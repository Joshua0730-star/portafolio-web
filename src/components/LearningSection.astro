---
import Book from "../assets/icon-book.svg";

// Las imágenes se toman de la carpeta `public/skills/`.
const learningTechs = [
  {
    name: "MongoDB",
    icon: "/skills/mongodb.svg",
    description: "Base de datos NoSQL",
  },
  {
    name: "Python",
    icon: "/skills/python.svg",
    description: "Desarrollo backend avanzado e Inteligencia Artificial",
  },
  {
    name: "React",
    icon: "/skills/react.svg",
    description: "Biblioteca de interfaces",
  },
];
---

<section id="learning" class="py-20 bg-background">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <div class="flex items-center justify-center gap-3 mb-4">
        <!-- BookOpen Icon -->
        <!-- <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-8 w-8 text-primary"
        >
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
        </svg> -->
        <Book class:list={["md:size-8"]} />
        <h2 class="text-3xl font-bold text-foreground">
          Actualmente Aprendiendo
        </h2>
      </div>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Tecnologías que estoy estudiando para expandir mis habilidades.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      {
        learningTechs.map(({ name, icon, description }) => (
          <div class="bg-card rounded-lg p-8 text-center hover:shadow-lg transition-all duration-300 border border-border hover:border-primary/50 flex flex-col items-center justify-between">
            <div class="flex flex-col mx-auto justify-center items-center">
              <img
                src={icon}
                alt={`Icono de ${name}`}
                class="h-14 w-14 mb-4"
                loading="lazy"
              />
              <h3 class="text-xl font-semibold text-card-foreground mb-2">
                {name}
              </h3>
              <p class="text-muted-foreground mb-4">{description}</p>
            </div>
            <div class="w-full">
              <span class="text-xs font-medium border border-border px-2.5 py-0.5 rounded-full">
                En progreso
              </span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
