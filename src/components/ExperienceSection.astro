---
const experience = [
{
  title: "Full Stack Developer",
  company: "CMCeledon S.A.S", // Contenido actualizado como solicitaste
  location: "Remote",
  period: "2025 - 2 months ago",
  description:
    "Software systems development for waste management in a nationwide app used by real customers.",
  learnings: [
    "Microservices architecture concepts",
    "Management of scalable, reusable component systems",
    "DDD and dependency injection",
    "API management",
    "Database stored procedures",
  ],
},{
  title: "Junior Frontend Developer",
  company: "Drugstore", // Contenido actualizado como solicitaste
  location: "Remote",
  period: "2024 - 12 months ago",
  description:
    "Development of responsive user interfaces for a system built for a local drugstore. Agile teamwork to deliver high-quality features.",
  achievements: [
    "Improved app performance by 30%",
    "Implemented a reusable component system",
    "Participated in code reviews and mentoring of new developers",
  ],
}];
---

<section
  id="experience"
  class="py-20 bg-muted/30 mx-auto flex flex-col justify-center"
>
  <div class="container mx-auto max-w-4xl px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-foreground">
        Professional Experience
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        My journey in web development, from my self-taught beginnings to my current professional experience.
      </p>
    </div>

    <div class="space-y-6">
      {experience.map(({title, company, location, period, description, achievements, learnings}) => (
      <div
        class="border-border border-2 bg-card hover:shadow-lg transition-shadow rounded-lg overflow-hidden md:max-w-xl mx-auto"
      >
        <div class="p-6">
          <div
            class="flex flex-col md:flex-row md:items-center md:justify-between gap-2"
          >
            <div>
              <h3 class="text-xl font-semibold text-card-foreground">
                {title}
              </h3>
              <p class="text-primary font-medium">{company}</p>
            </div>
            <div
              class="flex flex-col md:items-end gap-1 text-sm text-muted-foreground"
            >
              <div class="flex items-center gap-1.5">
                <!-- Calendar Icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-3 w-3"
                  ><path d="M8 2v4"></path><path d="M16 2v4"></path><rect
                    width="18"
                    height="18"
                    x="3"
                    y="4"
                    rx="2"></rect><path d="M3 10h18"></path></svg
                >
                {period}
              </div>
              <div class="flex items-center gap-1.5">
                <!-- MapPin Icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-3 w-3"
                  ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                  ></path><circle cx="12" cy="10" r="3"></circle></svg
                >
                {location}
              </div>
            </div>
          </div>
        </div>
        <div class="px-6 pb-6 space-y-4">
          <p class="text-muted-foreground">{description}</p>
          <div>
            <h4 class="font-medium mb-2 text-card-foreground">
              Key achievements:
            </h4>
            <ul class="space-y-1">
              {
                achievements ? achievements.map((achievement) => (
                  <li class="flex items-start gap-2 text-sm text-muted-foreground">
                    <span class="text-primary mt-1">•</span>
                    {achievement}
                  </li>
                )) : learnings.map((achievement) => (
                  <li class="flex items-start gap-2 text-sm text-muted-foreground">
                    <span class="text-primary mt-1">•</span>
                    {achievement}
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
      ))}
    </div>
  </div>
</section>
