// Informacion de contacto

type schemaContact = {
  email: string;
  phone: string;
  location: string;
};
const contactInfo: schemaContact = {
  email: "josuemarchena0730@gmail.com",
  phone: "+57 304 449 0607",
  location: "Colombia (Trabajo remoto)",
};
---

<section id="contact" class="py-16 px-4 bg-background mx-auto">
  <div class="container mx-auto max-w-4xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">¡Trabajemos Juntos!</h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Me encantaria hacer parte de tu equipo de trabajo, estoy listo... con
        muchas ganas y pasion por poder ayudar y contribuir a nuevas metas y
        cúspides en los proyectos de tu empresa.
      </p>
    </div>

    <div
      class="flex flex-col justify-center items-center md:flex-row gap-8 mx-auto"
    >
      <!-- Columna de Información de Contacto -->
      <div class="space-y-6 mx-auto">
        <div class="bg-card border-border border rounded-lg mx-auto">
          <div class="p-6">
            <h3 class="text-xl font-semibold">Información de Contacto</h3>
            <p class="text-sm text-muted-foreground">
              No dudes en contactarme por cualquiera de estos medios.
            </p>
          </div>
          <div class="p-6 pt-0 space-y-4">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-primary/10 rounded-lg">
                <!-- Mail Icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-4 w-4 text-primary"
                  ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
                >
              </div>
              <div>
                <p class="font-medium">Email</p>
                <a
                  href={`mailto:${contactInfo.email}`}
                  class="text-sm text-muted-foreground hover:text-primary transition-colors"
                  >{contactInfo.email}</a
                >
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="p-2 bg-primary/10 rounded-lg">
                <!-- Phone Icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-4 w-4 text-primary"
                  ><path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path></svg
                >
              </div>
              <div>
                <p class="font-medium">Teléfono</p>
                <a
                  href={`tel:${contactInfo.phone.replace(/\s/g, "")}`}
                  class="text-sm text-muted-foreground hover:text-primary transition-colors"
                  >{contactInfo.phone}</a
                >
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="p-2 bg-primary/10 rounded-lg">
                <!-- MapPin Icon -->
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-4 w-4 text-primary"
                  ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                  ></path><circle cx="12" cy="10" r="3"></circle></svg
                >
              </div>
              <div>
                <p class="font-medium">Ubicación</p>
                <p class="text-sm text-muted-foreground">
                  {contactInfo.location}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

